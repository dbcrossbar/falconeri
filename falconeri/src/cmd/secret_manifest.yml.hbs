{{#if include_falconeri}}
---
# Secrets used by falconeri.
apiVersion: v1
kind: Secret
metadata:
  name: falconeri
type: Opaque
data:
  POSTGRES_PASSWORD: "{{postgres_password}}"
{{/if}}
{{#if include_minio}}
---
# Secrets for MinIO server.
apiVersion: v1
kind: Secret
metadata:
  name: falconeri-minio
type: Opaque
data:
  MINIO_ROOT_USER: "{{minio_root_user}}"
  MINIO_ROOT_PASSWORD: "{{minio_root_password}}"
{{/if}}
{{#if include_s3}}
---
# S3 client credentials for workers (connects to MinIO in development).
apiVersion: v1
kind: Secret
metadata:
  name: s3
type: Opaque
data:
  AWS_ACCESS_KEY_ID: "{{minio_root_user}}"
  AWS_SECRET_ACCESS_KEY: "{{minio_root_password}}"
stringData:
  AWS_ENDPOINT_URL: "{{minio_endpoint_url}}"
{{/if}}
