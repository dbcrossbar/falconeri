{
    "pipeline": {
        "name": "word_frequencies"
    },
    "transform": {
        "image": "word-frequencies",
        "image_pull_policy": "Never",
        "cmd": [
            "word-frequencies.sh"
        ],
        "env": {
            "RUST_LOG": "falconeri_common=debug,falconeri_worker=debug,info"
        },
        "secrets": [
            {
                "name": "s3",
                "key": "AWS_ACCESS_KEY_ID",
                "env_var": "AWS_ACCESS_KEY_ID"
            },
            {
                "name": "s3",
                "key": "AWS_SECRET_ACCESS_KEY",
                "env_var": "AWS_SECRET_ACCESS_KEY"
            },
            {
                "name": "s3",
                "key": "AWS_ENDPOINT_URL",
                "env_var": "AWS_ENDPOINT_URL",
                "optional": true
            }
        ]
    },
    "parallelism_spec": {
        "constant": 1
    },
    "resource_requests": {
        "memory": "128Mi",
        "cpu": 0.1
    },
    "datum_tries": 3,
    "input": {
        "atom": {
          "repo": "texts",
          "URI": "s3://falconeri-test/texts/",
          "glob": "/*"
        }
    },
    "egress": {
        "URI": "s3://falconeri-test/word-frequencies/"
    }
}
